<script>
/* =======================
   NAVIGATION
======================= */
const home=document.getElementById("home");
const game=document.getElementById("game");
const settings=document.getElementById("settings");

function goHome(){
  home.style.display="block";
  game.style.display="none";
  settings.style.display="none";
}
function openGame(){
  home.style.display="none";
  game.style.display="block";
  settings.style.display="none";
  startGame();
}
function openSettings(){
  home.style.display="none";
  game.style.display="none";
  settings.style.display="block";
}

/* =======================
   SOUND SYSTEM
======================= */
let soundEnabled=false;
function toggleSound(){
  soundEnabled=!soundEnabled;
  document.getElementById("soundState").textContent=soundEnabled?"ON":"OFF";
}
function beep(freq=700,time=0.05){
  if(!soundEnabled) return;
  const ctx=new AudioContext();
  const osc=ctx.createOscillator();
  osc.frequency.value=freq;
  osc.connect(ctx.destination);
  osc.start();
  osc.stop(ctx.currentTime+time);
}

/* =======================
   ORIGINAL GAME: ORB SHIFT
======================= */
const canvas=document.getElementById("gameCanvas");
const ctx=canvas.getContext("2d");
let orb,dir,anim;

function startGame(){
  orb={x:150,y:260};
  dir=1;
  cancelAnimationFrame(anim);
  loop();
}

function loop(){
  ctx.clearRect(0,0,canvas.width,canvas.height);

  ctx.fillStyle="#38bdf8";
  ctx.beginPath();
  ctx.arc(orb.x,orb.y,12,0,Math.PI*2);
  ctx.fill();

  orb.y+=2*dir;
  if(orb.y<40||orb.y>480){
    dir*=-1;
    beep();
  }

  anim=requestAnimationFrame(loop);
}

/* =======================
   INPUT
======================= */
window.addEventListener("keydown",e=>{
  if(e.key===" "){
    dir*=-1;
    beep(900);
  }
});
</script>

